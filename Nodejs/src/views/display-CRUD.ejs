<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GET CRUD</title>
    <style>
        .table {
            border: 1px solid black;
        }

        td,
        th {
            border: 1px solid black;
        }

        .btn-edit {
            outline: none;
            border: none;
            background-color: orange;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-delete {
            outline: none;
            border: none;
            background-color: red;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>


            <% for(let i=0; i < dataTable.length; i++){ %>
                <tr>
                    <td>
                        <%= dataTable[i].email %>
                    </td>
                    <td>
                        <%= dataTable[i].firstName %>
                    </td>
                    <td>
                        <%= dataTable[i].lastName %>
                    </td>
                    <td>
                        <%= dataTable[i].address %>
                    </td>
                    <td>
                        <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="'button">Edit</a>
                        <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="'button">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</body>

</html>